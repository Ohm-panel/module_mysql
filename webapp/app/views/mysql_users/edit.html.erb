<h1>Editing MySQL service for <%= @mysql_user.user.full_name %></h1>

<% form_for(@mysql_user, :url => { :controller => 'mysql_users', :action => 'update', :id => @mysql_user.id }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :max_databases %> (leave blank or set to -1 for unlimited)<br />
    <%= f.text_field :max_databases, :size => 15 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to (image_tag 'icons/icontexto-webdev-arrow-left-032x032.png', :alt => '', :class => 'action') + 'Back', @mysql_user.user %>

