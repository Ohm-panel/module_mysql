<%= image_tag "icons/icontexto-webdev-site-map-128x128.png", :alt=>"", :class=>"bigicon" %>
<h1>Editing <%= @database.name %></h1>

<% form_for(@database, :url => { :controller => 'mysql_databases', :action => 'update', :id => @database.id }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "New name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to (image_tag 'icons/icontexto-webdev-arrow-left-032x032.png', :alt => '', :class => 'action') + 'Back',
            :controller => 'mysql_logins', :action => 'index' %>

